        meta(name='keywords',content='#{keywords ? keywords : "李清平,学习记"}')
        meta(name='description', content='#{description ? description : "【学习记】，logoli（李清平）的个人博客，记录学习的过程，互相讨论新的技术，里面有nodejs，vue，mongo，mysql，docker等一些新技术的文章，分享一些实际开发过程中需要的技术和观点"}')
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
        link(href='//apps.bdimg.com/libs/bootstrap/3.3.4/css/bootstrap.css', rel='stylesheet')
        link(href='/stylesheets/bootstrap-addon.css', rel='stylesheet')
        link(href='/stylesheets/site.css', rel='stylesheet')
